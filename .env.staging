# Staging Environment Configuration
NODE_ENV=staging

# Database Configuration
DATABASE_URL="postgresql://postgres:staging_db_password@postgres:5432/alphanet_staging?schema=public"

# Redis Configuration
REDIS_HOST=redis-stack
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password

# JWT Configuration
JWT_SECRET=staging_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Application URLs
API_URL=http://staging.neyamotenterprise.com/api
FRONTEND_URL=http://staging.neyamotenterprise.com
DOMAIN=staging.neyamotenterprise.com

# Email Configuration (use test credentials)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=staging_mail_user
MAIL_PASS=staging_mail_pass
MAIL_FROM=noreply@staging.neyamotenterprise.com

# OAuth Configuration (staging apps)
GOOGLE_CLIENT_ID=staging_google_client_id
GOOGLE_CLIENT_SECRET=staging_google_client_secret
FACEBOOK_CLIENT_ID=staging_facebook_client_id
FACEBOOK_CLIENT_SECRET=staging_facebook_client_secret

# Payment Gateway (sandbox)
BKASH_APP_KEY=staging_bkash_app_key
BKASH_APP_SECRET=staging_bkash_app_secret
BKASH_USERNAME=staging_bkash_username
BKASH_PASSWORD=staging_bkash_password
BKASH_BASE_URL=https://tokenized.sandbox.bka.sh/v1.2.0-beta

# Database Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_db_password
POSTGRES_DB=alphanet_staging

# Container Registry
REGISTRY=ghcr.io
IMAGE_NAME_API=alphanet/api
IMAGE_NAME_WEB=alphanet/web
API_TAG=develop
WEB_TAG=develop
