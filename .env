# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL="postgresql://postgres:production_db_password@postgres:5432/neyamot_enterprise?schema=public"

# Redis Configuration
REDIS_HOST=redis-stack
REDIS_PORT=6379
REDIS_PASSWORD=production_redis_password

# JWT Configuration
JWT_SECRET=production_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Application URLs
API_URL=https://new.neyamotenterprise.com/api
FRONTEND_URL=https://new.neyamotenterprise.com
DOMAIN=new.neyamotenterprise.com

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password
MAIL_FROM=noreply@neyamotenterprise.com

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# Payment Gateway
BKASH_APP_KEY=your_bkash_app_key
BKASH_APP_SECRET=your_bkash_app_secret
BKASH_USERNAME=your_bkash_username
BKASH_PASSWORD=your_bkash_password
BKASH_BASE_URL=https://tokenized.pay.bka.sh/v1.2.0-beta

# Database Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=production_db_password
POSTGRES_DB=neyamot_enterprise

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@neyamotenterprise.com
PGADMIN_DEFAULT_PASSWORD=admin_password_change_this

# SSL Configuration
SSL_EMAIL=admin@neyamotenterprise.com

# Container Registry
REGISTRY=ghcr.io
IMAGE_NAME_API=neyamot-enterprise/api
IMAGE_NAME_WEB=neyamot-enterprise/web
API_TAG=latest
WEB_TAG=latest
